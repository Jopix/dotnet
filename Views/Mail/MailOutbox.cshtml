@*@model IEnumerable<Ninesky.Models.Mail>*@
@model PagerData<Ninesky.Models.Mail>
@{
    ViewBag.Title = "MailOutbox";
    Layout = "~/Views/Shared/_User.cshtml";
}

<div class="row-fluid">
    <div class="span2 bs-docs-sidebar">
        @Html.Action("PartialUserNavMenus")
    </div>
    <div class="span8">

<h5>MailOutbox</h5>

<table class="table">
    <tr>
        <th>收件人</th>
        <th>标题</th>
        <th>正文</th>
        <th>发送时间</th>
        <th colspan="3"> 操作</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ToUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SendTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MailID }) |
            @Html.ActionLink("Details", "Details", new { id=item.MailID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MailID })
        </td>
    </tr>
}
</table>
 @Html.Pager(this.ViewContext.RouteData.Values, Model.Config, "pager", "pager")
       
        </div>

    </div>
